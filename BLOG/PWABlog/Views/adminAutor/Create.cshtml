@using PWABlog.ViewModels.Admin.autor
@model PWABlog.ViewModels.Admin.autor.AutorCreateViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "_Layout";
}

@using(Html.BeginForm("Create","AdminAutor",FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label(null,"Nome Autor",new{@for="nomeAutor"})
            @Html.EditorFor(model =>model.Nome,new{htmlAttributes = new{@class="form-control",@type="Text",@id="nomeAutor",@placeholder="Nome do Autor"}} )
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Gravar">
        </div>
    }

