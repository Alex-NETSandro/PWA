@using PWABlog.ViewModels.Admin.autor
@model PWABlog.ViewModels.Admin.autor.AutorEditViewModel
@using(Html.BeginForm("Update","AdminAutor",FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label(null,"Id",new{@for="idAutor"})
            @Html.EditorFor(model =>model.Id,new{htmlAttributes = new{@class="form-control",@type="numeric",@id="idAutor",@value = @Model.Id,@disabled=true}} )
        </div>
        <div class="form-group">
            @Html.Label(null,"Nome",new{@for="nomeAutor"})
            @Html.EditorFor(model =>model.Nome,new{htmlAttributes = new{@class="form-control",@type="Text",@id="nomeAutor",@value = @Model.Nome}} )
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Gravar">
        </div>
    }
