@using PWABlog.ViewModels.Admin.autor
@model PWABlog.ViewModels.Admin.autor.AutorDetailsViewModel

@{
    ViewBag.Title = "View";
    Layout = "_Layout";
}

<div class="form-group">
    @Html.Label(null,"Id",new{@for="idAutor"})
    @Html.EditorFor(model =>model.Id,new{htmlAttributes = new{@class="form-control",@type="numeric",@id="idAutor",@value = @Model.Id,@disabled=true}} )
</div>
<div class="form-group">
    @Html.Label(null,"Nome",new{@for="nomeAutor"})
    @Html.EditorFor(model =>model.Nome,new{htmlAttributes = new{@class="form-control",@type="Text",@id="nomeAutor",@value = @Model.Nome,@disabled=true}} )
</div>

<div>
    @Html.ActionLink("Voltar","Index","AdminAutor",null,new{@class="btn btn-secondary"})
</div>