@using PWABlog.ViewModels.Admin.Categoria
@model PWABlog.ViewModels.Admin.Categoria.CategoriaEditViewModel
@using(Html.BeginForm("Update","AdminCategoria",FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label(null,"Id",new{@for="idCategoria"})
            @Html.EditorFor(model =>model.Id,new{htmlAttributes = new{@class="form-control",@type="numeric",@id="idCategoria",@value = @Model.Id,@disabled=true}} )
        </div>
        <div class="form-group">
            @Html.Label(null,"Nome Categoria",new{@for="nomeCategoria"})
            @Html.EditorFor(model =>model.Nome,new{htmlAttributes = new{@class="form-control",@type="Text",@id="nomeCategoria",@value = @Model.Nome}} )
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Gravar">
        </div>
    }
