@using PWABlog.ViewModels.Admin.etiqueta
@model PWABlog.ViewModels.Admin.etiqueta.EtiquetaCreateViewModel

@{
    ViewBag.Title = @ViewBag.title;
    Layout = "_Layout";
}

@using(Html.BeginForm("Create","AdminEtiqueta",FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label(null,"Nome Tag",new{@for="nomeEtiqueta"})
            @Html.EditorFor(model =>model.Nome,new{htmlAttributes = new{@class="form-control",@type="Text",@id="nomeEtiqueta",@placeholder="Nome"}} )
        </div>
        @if (Model.Categoria.Count!=0)
        {
            <div class="form-group">
                @Html.Label(null,"Categoria",new{@for="categoria"})
                <select class="form-control" name="listCategorias" id="categoria">
                    @foreach (var categoria in Model.Categoria)
                    {
                        <option class="list-group-item" value="@categoria.Id">@categoria.Nome</option>
                    }
                </select>
            </div>
           
        }else{
            @Html.ActionLink("Nova Categoria","Create","AdminCategoria",null,new{@class="btn btn-primary"})
        }
        <div>
            <input type="submit" class="btn btn-primary" value="Gravar">
        </div>
    }
